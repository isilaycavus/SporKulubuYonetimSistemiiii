@model User
@{
    ViewData["Title"] = "Profil Bilgilerini Güncelle";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm rounded-4 border-0">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <i class="fas fa-user-edit fa-3x text-primary mb-3"></i>
                        <h3 class="fw-bold">Profil Bilgilerini Güncelle</h3>
                        <p class="text-muted small">Aşağıdaki bilgileri düzenleyip kaydedebilirsiniz.</p>
                    </div>

                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label">Ad Soyad</label>
                            <input asp-for="FullName" class="form-control" />
                            <span asp-validation-for="FullName" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">E-posta</label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CardNumber" class="form-label">Kart Numarası</label>
                            <input asp-for="CardNumber" class="form-control" readonly />
                            <span asp-validation-for="CardNumber" class="text-danger small"></span>
                        </div>

                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i> Bilgileri Kaydet
                            </button>
                        </div>
                    </form>

                    <div class="text-center mt-3">
                        <a asp-action="Profile" class="btn btn-link text-decoration-none">
                            <i class="fas fa-arrow-left me-1"></i> Geri Dön
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
